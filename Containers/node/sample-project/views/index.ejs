<div class="row">
    <div class="col-md-12">
        <!-- Statistics Card -->
        <div class="stats-card">
            <div class="stats-number"><%= users.length %></div>
            <div class="stats-label">Total Users</div>
        </div>
        
        <!-- Action Buttons -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-white"><i class="fas fa-users me-3"></i>User Management</h2>
            <div class="btn-group" role="group">
                <a href="/add" class="btn btn-primary me-2">
                    <i class="fas fa-plus me-2"></i>Add New User
                </a>
                <form method="post" action="/reset" style="display: inline;" onsubmit="return confirm('Are you sure you want to reset the database? This will delete all users.')">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-trash-alt me-2"></i>Reset Database
                    </button>
                </form>
            </div>
        </div>
        
        <% if (users.length === 0) { %>
            <div class="card">
                <div class="card-body empty-state">
                    <i class="fas fa-users"></i>
                    <h4 class="mt-3 text-white">No users found!</h4>
                    <p class="text-white-50">Get started by adding your first user to the system.</p>
                    <a href="/add" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>Add Your First User
                    </a>
                </div>
            </div>
        <% } else { %>
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>User List</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-hashtag me-2"></i>ID</th>
                                    <th><i class="fas fa-user me-2"></i>Name</th>
                                    <th><i class="fas fa-envelope me-2"></i>Email</th>
                                    <th><i class="fas fa-calendar me-2"></i>Created At</th>
                                    <th><i class="fas fa-cogs me-2"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(function(user) { %>
                                    <tr>
                                        <td><span class="badge"><%= user.id %></span></td>
                                        <td><strong class="text-white"><%= user.name %></strong></td>
                                        <td><i class="fas fa-envelope me-2 text-white-50"></i><%= user.email %></td>
                                        <td><i class="fas fa-clock me-2 text-white-50"></i><%= new Date(user.created_at).toLocaleDateString() %></td>
                                        <td>
                                            <form method="post" action="/delete/<%= user.id %>" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete <%= user.name %>?')">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash me-1"></i>Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <div class="mt-3 text-end">
                <small class="text-white-50">
                    <i class="fas fa-info-circle me-1"></i>
                    Showing <%= users.length %> user<%= users.length !== 1 ? 's' : '' %> in the system
                </small>
            </div>
        <% } %>
    </div>
</div>

<!-- API Documentation Section -->
<div class="api-section">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-white"><i class="fas fa-code me-2"></i>API Endpoints</h3>
            <p class="text-white-50">This application also provides REST API endpoints for programmatic access:</p>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="api-endpoint">
                        <div class="api-method">GET /api/users</div>
                        <small class="text-white-50">Get all users in JSON format</small>
                    </div>
                    
                    <div class="api-endpoint">
                        <div class="api-method">POST /api/users</div>
                        <small class="text-white-50">Create a new user (JSON body required)</small>
                    </div>
                    
                    <div class="api-endpoint">
                        <div class="api-method">GET /api/users/:id</div>
                        <small class="text-white-50">Get a specific user by ID</small>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="api-endpoint">
                        <div class="api-method">DELETE /api/users/:id</div>
                        <small class="text-white-50">Delete a user by ID</small>
                    </div>
                    
                    <div class="api-endpoint">
                        <div class="api-method">GET /health</div>
                        <small class="text-white-50">Health check endpoint</small>
                    </div>
                    
                    <div class="api-endpoint">
                        <div class="api-method">POST /reset</div>
                        <small class="text-white-50">Reset database (delete all users)</small>
                    </div>
                </div>
            </div>
            
            <div class="mt-4">
                <h5 class="text-white"><i class="fas fa-terminal me-2"></i>Quick API Examples:</h5>
                <div class="code-block">
                    <code>
                        # Get all users<br>
                        curl http://localhost:3000/api/users<br><br>
                        
                        # Create a user<br>
                        curl -X POST http://localhost:3000/api/users \<br>
                        &nbsp;&nbsp;-H "Content-Type: application/json" \<br>
                        &nbsp;&nbsp;-d '{"name":"John Doe","email":"john@example.com"}'<br><br>
                        
                        # Health check<br>
                        curl http://localhost:3000/health
                    </code>
                </div>
            </div>
        </div>
    </div>
</div>
